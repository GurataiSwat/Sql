<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lcow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/dialog_frame"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.nasar_khan.sql.cow">

    <ScrollView
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.00">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/zoom_plate"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.00"
                android:text="Please Put All Details"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-11dp"
                android:layout_weight="0.00"
                android:text="  Enter Mobile Number"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_weight="0.00"
                android:background="@android:drawable/dialog_frame"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="  Enter Price Of Animal"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_weight="0.00"
                android:background="@android:drawable/dialog_frame"
                android:ems="10"
                android:inputType="number"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/hhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="0.00"
                android:text="  Select Images of Animal"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.00"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/pti"
                    android:layout_width="24dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.3"
                    android:background="@color/colorAccent"
                    android:text="Capture Image" />

                <Button
                    android:id="@+id/bbt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="0.3"
                    android:background="@color/colorAccent"

                    android:editable="false"
                    android:text="  Choose Image" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.00"
                android:background="@android:drawable/gallery_thumb"
                app:srcCompat="@drawable/heree" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="0.00"
                android:text="  Add Your Address"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_weight="0.00"
                android:background="@android:drawable/alert_dark_frame"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@android:color/background_light" />

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginTop="3dp"
                android:layout_weight="0.00"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.20"
                    android:text="CANCEL" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.19"
                    android:text="Save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
